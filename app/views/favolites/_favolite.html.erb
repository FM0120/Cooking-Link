<% if user_signed_in? %>
<% if recipe.favolited_by?(current_user) %>
   <%= link_to recipe_favolites_path(recipe.id), method: :delete, class: 'btn btn-default', remote: true do %>
       ♥<%= recipe.favolites.count %>
   <% end %>
<% else %>
      <%= link_to recipe_favolites_path(recipe.id), method: :post, class: 'btn btn-default', remote: true do %>
         ♡<%= recipe.favolites.count %>
      <% end %>
  <% end %>
<% end %>