<%= form_with model: Recipe.new,local:true do |f| %>
  <div class="form-group">
    <%= f.label 'レシピタイトル' %>
    <%= f.text_field :recipe_title %>
  </div>
  <%= f.label :（出来上がり） %>
  <%= f.attachment_field :image %>
  
  <div class="form-group">
    <%= f.label '(レシピ詳細)' %>
    <%= f.text_area :recipe_detail %>
  </div>
  <div class="form-group">
    <%= f.label '(コツまたはレシピについて)' %>
    <%= f.text_area :trick %>
  </div>
  <div class="form-group">
    <%= f.label '(材料)' %>
    <%= f.text_area :food %>
  </div>
  
  <%= f.submit '登録' %>
<% end %>